<!DOCTYPE html>
<html>
<head>
<link rel='stylesheet' href='/stylesheets/style.css' />
<link rel="stylesheet"href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<link rel="stylesheet" href="https://bootswatch.com/flatly/bootstrap.min.css">
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
		<script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="0" />
<script type="text/javascript">
	var facebook = angular.module('Facebook', []);
	facebook.controller('personalDetails', function($scope, $http) {
		$scope.submit = function() {
			$http({
				method : "POST",
				url : '/storePersonalData',
				data : {
					"summary" : $scope.summary,
					"worktextbox1" : $scope.worktextbox1,
					"education":$scope.education,
					"contact":$scope.contact,
					"life_events":$scope.life_events,
					"music":$scope.music,
					"shows":$scope.shows,
					"sports":$scope.sports
				}
			}).success(function(data){
				if(data.status=='success'){
					alert(data.msg);
					window.location.assign("/homepage");
				} 
				else{
					alert(data.msg);
				}
			}).error(function(err){
				alert("error");
			});
		};
	});
</script>
<title>Facebook-Welcome</title>
</head>
<body ng-app="Facebook">

					<div class="row">
              <!-- top nav -->
              	<div class="navbar navbar-default navbar-fixed-top navbar-transparent">  
                    <div class="navbar-header" style="margin-left:50px;">
                    
                      <a href="/" class="navbar-brand logo">f</a>
                  	</div>
                  	<nav class="collapse navbar-collapse" role="navigation">
                    <form class="navbar-form navbar-left">
                        <div class="input-group input-group-sm" style="max-width:960px;">
                          <input type="search" class="form-control" placeholder="Search" size="80" name="srch-term" id="srch-term">
                          <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                          </div>
                        </div>
                    </form>
                    <ul class="nav navbar-nav">
                      <li>
                        <a href="homepage"><i class="glyphicon glyphicon-home"></i> Home</a>
                      </li>
              
                      <li>
                        <a href="/viewProfile"><span class="badge"><%=username%></span></a>
                      </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i></a>
                        <ul class="dropdown-menu">
                        <li><a href="editProfile">Edit Profile</a></li>
                          <li><a href="friends">Friends</a></li>
                          <li><a href="groups">Groups</a></li>
                          <li><a href="logout">Logout</a></li>
                        </ul>
                      </li>
                    </ul>
                  	</nav>
                </div>
        </div>
	<div class="row">
		<div class="col-md-1">
		
		</div>
		<div class="col-md-5">
			<form ng-submit="submit();" id="personalForm" ng-controller ="personalDetails">
				<h4>Welcome to Facebook, <%= username %></h4>
				<h3>About</h3>
					<label>Summary</label>
				<textarea name="summary" rows="4" columns="100" class="form-control" id="summary" ng-model="summary" style="resize: none;"/></textarea><br/>
				<label>Work</label>
					<input type="text" class="form-control" name="worktextbox1" id="worktextbox1" ng-model="worktextbox1" value=""/><br/>
				<label>Education</label>
				<input type="text" name="education" class="form-control" id="education" ng-model="education"/><br/>
				<label>Contact Information:</label>
				<input type="number" name="contact" class="form-control" id="contact"  maxlength="10" ng-model="contact"/><br/>
				<label>Life Events:</label>
				<input type="text" name="life_events" class="form-control" ng-model="life_events"/><br/>
				<nav>
				<h3>Interests:</h3>
				<label>Music:</label>
				<input type="text" name="music" class="form-control" id="music" ng-model="music"/><br/>
				<label>Shows:</label>
				<input type="text" name="shows" class="form-control" id="shows" ng-model="shows"/><br/>
				<label>Sports:</label>
				<input type="text" name="sports" class="form-control" id="sports" ng-model="sports"/><br/>
				</nav>
				<input type="submit" value="Save" class="btn btn-success"/>
			</form>
		</div>
		<div class="col-md-4">
		
		</div>
	</div>
	
</body>
</html>